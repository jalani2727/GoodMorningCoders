<!--Header Content-->
<header class="customHeader">

    <!--Left Portion of Header-->
    <div class="customHeaderLeft">

        <!--Title Logo-->
        <span>{{title}}</span>

    </div>


    <!--Middle Portion of Header-->
    <center>

        <div class="customHeaderMiddle">

            <!--Sun Logo-->
            <img src="/images/sunImage.png">

        </div>

    </center>


    <!--Right Portion of Header-->
    <div class="customHeaderRight">

        <div class="navRight">

            {{#if isLoggedIn}}
            
            <!--User Greet Message-->
            <span>Good morning, {{profile.alias}}!</span>

            <!--User Avatar-->
            <img src="{{profile.github_avatar_url}}" title="{{profile.alias}}">

            {{/if}}

        </div>

        <div class="navRight">
        
            <!--Login / Logout-->
            {{#if isLoggedIn}}

                <a href="/logout">Logout</a>

            {{else}}

                <a href="/login">Login</a>

            {{/if}}

            <!--Profile-->
            <a href="/userprofile">Profile</a>

            <!--Link-->
            <a href="/about">About</a>

        </div>

    </div>

</header>




<!--Home Screen Dashboard-->
<div class="homeDashboard" style="background-image: url('{{homeBG}}')">

    <!--Coding Languages Content-->
    <div class="contentBoxMain">

        <!--Content Title-->
        <span id="mainBoxTitle"><i class="fa fa-code"></i> CODING LANGUAGES</span>


        <!--Languages-->
        <div class="contentBoxLinks">


            <!--Language Selection-->
            {{#each category}}

            <div>

                <a href="/category/{{id}}">{{categoryname}}</a>

            </div>

            {{/each}}



        </div>

    </div>


    <!--Small Box Container-->
    <div class="contentBoxContainer">

        <!--Weather Content Box-->
        <div class="contentBoxSmall">

            <!--Content Title-->
            <span id="smallBoxTitle"><i class="fa fa-cloud"></i> WEATHER</i></span>

            <span>{{currentWeather}}</span>

        </div>


        <!--Time Content Box-->
        <div class="contentBoxSmall">

            <!--Content Title-->
            <span id="smallBoxTitle"><i class="fa fa-clock-o"></i> TIME</span>

        </div>


        <!--Undecided Content Box-->
        <div class="contentBoxSmall">

            
        </div>

        <!--Undecided Content Box-->
        <div class="contentBoxSmall"></div>

    </div>

</div>




<!--Footer Content-->
<footer></footer>